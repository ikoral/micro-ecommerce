{
  "name": "front",
  "version": "0.1.0",
  "scripts": {
    "build": "npm-run-all --parallel build:dev:*",
    "build:dev": "npm-run-all --parallel 'build:dev:* -- --watch'",
    "build:pro": "npm-run-all lint clean --parallel build:pro:*",
    "build:dev:app": "cross-env NODE_ENV=development webpack --config webpack.app.dev.js --profile --progress --mode development",
    "build:pro:app": "cross-env NODE_ENV=production webpack -p --config webpack.app.pro.js --profile --progress --mode production",
    "build:dev:server": "cross-env NODE_ENV=development webpack --config webpack.server.js --profile --progress --mode development",
    "build:pro:server": "cross-env NODE_ENV=production webpack -p --config webpack.server.js --profile --progress --mode production",
    "clean": "npm-run-all --parallel clean:*",
    "clean:app": "rm -f public/bundle.*",
    "clean:server": "rm -rf build",
    "lint": "cross-env NODE_ENV=development eslint . --fix",
    "start": "npm-run-all --parallel build:dev start:dev",
    "start:dev": "cross-env NODE_ENV=development nodemon build/bundle.js",
    "start:debug": "cross-env NODE_ENV=development node --inspect build/bundle.js",
    "start:pro": "cross-env NODE_ENV=prodction node build/bundle.js"
  },
  "dependencies": {
    "common": "^0.1.0",
    "compression-webpack-plugin": "^3.0.1",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "semantic-ui-react": "^0.88.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.4",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "eslint-config-mmontes11-node": "^1.0.5",
    "eslint-config-mmontes11-react": "^1.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "webpack-cli": "^3.3.10"
  }
}
