{
  "name": "front",
  "version": "0.1.0",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:app": "webpack --config webpack.app.js --profile --progress --watch",
    "build:server": "webpack --config webpack.server.js --profile --progress --watch",
    "clean": "npm-run-all --parallel clean:*",
    "clean:app": "rm public/bundle.js",
    "clean:server": "rm -rf build",
    "lint": "eslint . --fix",
    "start": "cross-env NODE_ENV=development nodemon build/bundle.js"
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "webpack": "^4.41.4",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "eslint-config-mmontes11-node": "^1.0.5",
    "eslint-config-mmontes11-react": "^1.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "webpack-cli": "^3.3.10"
  }
}
